@model TranTienSon_231210892_de02.Models.TtsCatalog

@{
    ViewData["Title"] = "Edit Catalog";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">✏️ Chỉnh sửa danh mục</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="TtsId" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="TtsCateName" class="form-label fw-semibold"></label>
                        <input asp-for="TtsCateName" class="form-control" placeholder="Nhập tên danh mục..." />
                        <span asp-validation-for="TtsCateName" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="TtsCatePrice" class="form-label fw-semibold"></label>
                        <input asp-for="TtsCatePrice" class="form-control" type="number" step="0.01" placeholder="Giá (VNĐ)" />
                        <span asp-validation-for="TtsCatePrice" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="TtsCateQty" class="form-label fw-semibold"></label>
                        <input asp-for="TtsCateQty" class="form-control" type="number" placeholder="Số lượng tồn" />
                        <span asp-validation-for="TtsCateQty" class="text-danger"></span>
                    </div>

                    <div class="col-md-8">
                        <label asp-for="TtsPicture" class="form-label fw-semibold"></label>
                        <input asp-for="TtsPicture" class="form-control" placeholder="Đường dẫn hình ảnh..." />
                        <span asp-validation-for="TtsPicture" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 d-flex align-items-center">
                        <div class="form-check mt-4">
                            <input class="form-check-input" asp-for="TtsCateActive" />
                            <label class="form-check-label fw-semibold">
                                @Html.DisplayNameFor(model => model.TtsCateActive)
                            </label>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
